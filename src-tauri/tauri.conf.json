{
  "build": {
    "beforeDevCommand": "yarn dev:server",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Code Expert Sync",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "scope": ["$APPLOCALDATA/*", "*/**", "$HOME/*", "$TEMP/*"]
      },
      "dialog": {
        "open": true
      },
      "shell": {
        "all": false,
        "open": "/.*"
      },
      "http": {
        "request": true,
        "scope": [
          "http://localhost:3000/*",
          "http://localhost:3100/*",
          "http://localhost:1420/*",
          "https://api.expert.ethz.ch/*",
          "https://api.expert-dev.ethz.ch/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ch.ethz.code-expert.sync",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://update-desktop-rduxf6hsba-oa.a.run.app?current_version={{current_version}}&target={{target}}&arch={{arch}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM2REM4NDYxNTEyQzRFN0IKUldSN1RpeFJZWVRjeHBFTXN1alp6cktrYm1BZkhMMHNzYUQ4dkc1WmNjZjdCbHQ3a3E2UVVEUHQK"
    },
    "systemTray": {
      "iconPath": "icons/icon.png"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": false,
        "title": "Code Expert Sync",
        "width": 400
      }
    ]
  }
}
